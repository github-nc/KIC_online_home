<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DashboardFilter</filter-name>
        <filter-class>admin.filter.DashboardFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckStudentFilter</filter-name>
        <filter-class>admin.filter.CheckStudentFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckRoomFilter</filter-name>
        <filter-class>admin.filter.CheckRoomFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CheckSemesterFilter</filter-name>
        <filter-class>admin.filter.CheckSemesterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckSemesterFilter</filter-name>
        <url-pattern>/checkSemester.form</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckRoomFilter</filter-name>
        <url-pattern>/checkRoom.form</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckStudentFilter</filter-name>
        <url-pattern>/checkStudent.form</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DashboardFilter</filter-name>
        <url-pattern>/dashboard.form</url-pattern>
    </filter-mapping>
    <listener>
        <description>HttpSessionAttributeListener</description>
        <listener-class>admin.listener.SessionAttributeListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>admin.dispatcher.DispatcherServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/login.form</url-pattern>
        <url-pattern>/login.action</url-pattern>
        <url-pattern>/logout.form</url-pattern>
        <url-pattern>/dashboard.form</url-pattern>
        
        <url-pattern>/addRM.form</url-pattern>
        <url-pattern>/room.save</url-pattern>
        <url-pattern>/checkRoom.form</url-pattern>
        <url-pattern>/removeRM.form</url-pattern>
        <url-pattern>/getOldRM.form</url-pattern>
        <url-pattern>/room.update</url-pattern>
        
        <url-pattern>/addSemstr.form</url-pattern>
        <url-pattern>/semester.save</url-pattern>
        <url-pattern>/checkSemester.form</url-pattern>
        <url-pattern>/removeSMS.form</url-pattern>
        <url-pattern>/getOldSMS.form</url-pattern>
        <url-pattern>/semester.update</url-pattern>
            
        <url-pattern>/addStudent.form</url-pattern>
        <url-pattern>/student.save</url-pattern>
        <url-pattern>/checkStudent.form</url-pattern>
        <url-pattern>/removeStudent.form</url-pattern>
        <url-pattern>/getOldStudent.form</url-pattern>
        <url-pattern>/student.update</url-pattern>
        
        <url-pattern>/addCourse.form</url-pattern>
        
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
